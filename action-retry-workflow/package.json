{
  "name": "action-retry-workflow",
  "version": "1.0.0",
  "description": "A GitHub Actions composite action that intelligently retries failed workflow runs on a specific branch.",
  "main": "mock-gh.js",
  "scripts": {
    "test": "jest",
    "test:unit": "python3 -m pytest test_retry_workflow.py -v",
    "test:integration": "jest action.test.js",
    "test:all": "npm run test:unit && npm run test:integration"
  },
  "jest": {
    "testEnvironment": "node",
    "testMatch": [
      "**/*.test.js"
    ],
    "collectCoverageFrom": [
      "*.js",
      "!node_modules/**"
    ]
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@actions/core": "^1.11.1",
    "@actions/github": "^6.0.1",
    "@kie/mock-github": "^2.0.1",
    "jest": "^30.2.0"
  }
}
