{
  "name": "@scality-actions/infra",
  "version": "1.0.0",
  "description": "Actions for provisioning cloud infrastructure for installing and testing Scality products.",
  "main": "src/index.ts",
  "scripts": {
    "build": "tsc",
    "format": "prettier --write '**/*.ts'",
    "format-check": "prettier --check '**/*.ts'",
    "lint": "eslint src/**/*.ts",
    "package": "npm run package:example && npm run package:setup",
    "package:setup": "ncc build src/entrypoints/setup.ts --source-map --license licenses.txt --out setup/dist",
    "package:example": "ncc build src/entrypoints/example.ts --source-map --license licenses.txt --out example/dist",
    "test": "jest --passWithNoTests",
    "all": "npm run build && npm run format && npm run lint && npm run package && npm test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/scality/actions.git"
  },
  "author": "Scality",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/scality/actions/issues"
  },
  "homepage": "https://github.com/scality/actions#infra-actions",
  "devDependencies": {
    "@typescript-eslint/parser": "^5.45.0",
    "@vercel/ncc": "^0.34.0",
    "eslint": "^8.28.0",
    "eslint-plugin-github": "^4.4.1",
    "eslint-plugin-jest": "^27.1.6",
    "prettier": "^2.8.0",
    "ts-jest": "^29.0.3",
    "typescript": "^4.9.3"
  },
  "dependencies": {
    "@actions/core": "^1.10.0",
    "@actions/exec": "^1.1.1",
    "@actions/io": "^1.1.2",
    "@actions/tool-cache": "^2.0.1",
    "@pulumi/pulumi": "^3.48.0",
    "@pulumi/random": "^4.8.2"
  }
}
